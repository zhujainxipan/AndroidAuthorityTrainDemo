<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.annuoaichengzhang.androidauthoritytraindemo" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SpannableActivity"
            android:label="@string/title_activity_spannable"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SurfaceViewActivity"
            android:label="@string/title_activity_surface_view"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".MediaPlayerActivity"
            android:label="@string/title_activity_media_player"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
